# define how we compile a .ASM file
{..\8bpp\}.asm{}.obj:
   $(ASM) $(ASMOPTS) $<

# define how we compile a .C file
{..\8bpp\}.c{}.obj:
	$(CC) $(CCOPTIONS) $<

# define how we compile a .CPP file
{..\8bpp}.cpp{}.obj:
	$(CPP) $(CCOPTIONS) $<

# define how we compile a .ASM file
{..\16bpp\}.asm{}.obj:
   $(ASM) $(ASMOPTS) $<

# define how we compile a .C file
{..\16bpp\}.c{}.obj:
	$(CC) $(CCOPTIONS) $<

# define how we compile a .CPP file
{..\16bpp\}.cpp{}.obj:
	$(CPP) $(CCOPTIONS) $<

# define how we compile a .ASM file
{..\24bpp\}.asm{}.obj:
   $(ASM) $(ASMOPTS) $<

# define how we compile a .C file
{..\24bpp\}.c{}.obj:
	$(CC) $(CCOPTIONS) $<

# define how we compile a .CPP file
{..\24bpp\}.cpp{}.obj:
	$(CPP) $(CCOPTIONS) $<

# define how we compile a .ASM file
{..\screen\}.asm{}.obj:
   $(ASM) $(ASMOPTS) $<

# define how we compile a .C file
{..\screen\}.c{}.obj:
	$(CC) $(CCOPTIONS) $<

# define how we compile a .CPP file
{..\screen}.cpp{}.obj:
	$(CPP) $(CCOPTIONS) $<


