all: setstden $(LIB).pch $(LIB).lib

#ÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄ¿
# Standard make include                                                    ³
#ÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÙ

!include $(MYTH95ROOT)\inc\make.inc

#°°°°°°°°°°°°°°°°°°°°°°°°°°°°°°°°°°°°°°°°°°°°°°°°°°°°°°°°°°°°°°°°°°°°°°°°°°°
#
#                                 Rules
#
#°°°°°°°°°°°°°°°°°°°°°°°°°°°°°°°°°°°°°°°°°°°°°°°°°°°°°°°°°°°°°°°°°°°°°°°°°°°

#--- .c, .cpp, .asm setup in standard include ---

#ÄÄÄ Assembly
{..\8bpp\}.asm{}.obj:
   $(ASM) $(ASMOPTS) $<

{..\16bpp\}.asm{}.obj:
   $(ASM) $(ASMOPTS) $<

{..\24bpp\}.asm{}.obj:
   $(ASM) $(ASMOPTS) $<

{..\screen\}.asm{}.obj:
   $(ASM) $(ASMOPTS) $<

{..\boards\}.asm{}.obj:
   $(ASM) $(ASMOPTS) $<

#ÄÄÄ C++
{..\}.cpp{}.obj:
        $(CPP) $(CCOPTIONS) /Yuvangogh.hpp /Fp$(LIB).pch  $<

{..\8bpp}.cpp{}.obj:
        $(CPP) $(CCOPTIONS) /Yuvangogh.hpp /Fp$(LIB).pch $<

{..\16bpp\}.cpp{}.obj:
        $(CPP) $(CCOPTIONS) /Yuvangogh.hpp /Fp$(LIB).pch $<

{..\24bpp\}.cpp{}.obj:
        $(CPP) $(CCOPTIONS) /Yuvangogh.hpp /Fp$(LIB).pch $<

{..\screen}.cpp{}.obj:
        $(CPP) $(CCOPTIONS) $<

{..\boards\}.cpp{}.obj:
        $(CPP) $(CCOPTIONS) $<

#±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±
#
#                              Dependencies
#
#±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±

$(LIB).pch :
    del vngpch.obj

vngpch.obj : ..\vngpch.cpp
    $(CPP) /Ycvangogh.hpp /Fp$(LIB).pch $(CCOPTIONS) ..\$*.cpp

#ÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄ¿
# Library                                                                  ³
#ÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÙ

$(LIB).lib:   $(OBJS)
    -del $(LIB).lib
    $(LB) $(LBOPTS) /out:$(LIB).lib @<<
    $(OBJS: =
)
<<

release: all
    copy ..\inc\*.* $(MYTH95ROOT)\inc
    copy $(LIB).lib $(MYTH95ROOT)\lib

clean:
    @del *.obj
    @del *.res
    @del *.err
    @del *.lst
    @del *.ilk
    @del *.pdb
    @del *.pch

#°±² End of makefile ²±°

